<table cellpadding="0" cellspacing="0">
  <tr>
    <td class="indicator-container">
      <%= loading_indicator_tag(:action => :record, :id => record.id) %>
    </td>
    <% active_scaffold_config.action_links.each :record do |link| -%>
      <% next if skip_action_link(link) -%>
      <td>
        <%= record.authorized_for?(:action => link.crud_type) ? render_action_link(link, link.action == 'nested' ? url_options.merge(record.class.name.foreign_key.to_sym => url_options[:id], :id => nil) : url_options, record) : "<a class='disabled  #{link.action}'>#{link.label}</a>" -%>
      </td>
    <% end -%>
  </tr>
</table>
